<h2>Tasks To Do</h2>

<div class="add-class">

    <form id="add-task-form" action="/add" method="post">
        <input id="add-task-text" name="text" placeholder="todo task">
        <input id="add-task-button" name="add" type="submit" value="add">
    </form>

</div>

<div class="task-list">

        {{#if tasks}}
            <ol>
                {{#each tasks}}
                    <li>{{this.text}}</li>
                {{/each}}
            </ol>

        {{else}}
            <p>No tasks to do!</p>
        {{/if}}

 </div>